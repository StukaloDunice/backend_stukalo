{
  "openapi": "3.0.1",
  "info": {
    "title": "News API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "News site Api",
      "descriptions": "Api functions of our application"
    }
  ],
  "paths": {
    "/news": {
      "get": {
        "summary": "return all news",
        "tags": [
          "News site Api"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "title": "Sample",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number",
                        "description": "News id"
                      },
                      "title": {
                        "type": "string",
                        "description": "Title news"
                      },
                      "content": {
                        "type": "string",
                        "description": "Content news"
                      },
                      "tags": {
                        "type": "string",
                        "description": "Tags news"
                      },
                      "image": {
                        "type": "string",
                        "description": "Image news"
                      },
                      "userId": {
                        "type": "number",
                        "description": "User id"
                      },
                      "user": {
                        "type": "object",
                        "description": "The user who owns the news",
                        "properties": {
                          "username": {
                            "type": "string",
                            "description": "User name"
                          },
                          "avatar": {
                            "type": "string",
                            "description": "User avatar"
                          },
                          "id": {
                            "type": "number",
                            "description": "User id, matches the field userId"
                          },
                          "email": {
                            "type": "string",
                            "description": "User email"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request response, error sequelize"
          }
        }
      },
      "post": {
        "summary": "return created news",
        "tags": [
          "News site Api"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": {
              "type":"string",
              "example": "token"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "title": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  },
                  "tags": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "title": "Sample",
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "string",
                      "description": "Content created news"
                    },
                    "createdAt":{
                      "type": "string",
                      "description": "Date created news"
                    },
                    "id": {
                      "type": "number",
                      "description": "Id news"
                    },
                    "image": {
                      "type": "string",
                      "description": "Image created news"
                    },
                    "tags": {
                      "type": "string",
                      "description": "Tags created news"
                    },
                    "title": {
                      "type": "string",
                      "description": "Title created news"
                    },
                    "updatedAt":{
                      "type": "string",
                      "description": "Date updated news"
                    },
                    "userId": {
                      "type": "number",
                      "description": "Id user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request response, error sequelize"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "return one user for user page",
        "tags": [
          "News site Api"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "simple parametr",
            "schema": {
              "type": "string",
              "example": "1"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "title": "Sample",
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string",
                      "description": "User name"
                    },
                    "avatar": {
                      "type": "string",
                      "description": "User avatar"
                    },
                    "id": {
                      "type": "number",
                      "description": "User id, matches the field userId"
                    },
                    "email": {
                      "type": "string",
                      "description": "User email"
                    },
                    "news": {
                      "type": "array",
                      "description": "News for personal user",
                      "items": {
                        "type": "object",
                        "description": "One news for personal user",
                        "properties": {
                          "id": {
                            "type": "number",
                            "description": "News id"
                          },
                          "title": {
                            "type": "string",
                            "description": "Title news"
                          },
                          "content": {
                            "type": "string",
                            "description": "Content news"
                          },
                          "tags": {
                            "type": "string",
                            "description": "Tags news"
                          },
                          "image": {
                            "type": "string",
                            "description": "Image news"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "You are not authorized"
          }
        }
      },
      "patch": {
        "summary": "return updated user",
        "tags": [
          "News site Api"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": {
              "type":"string",
              "example": "token"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "required": true,
                    "description": "Avatar user"
                  },
                  "username": {
                    "type": "string",
                    "required": true,
                    "description": "Username user"
                  },
                  "id": {
                    "type": "number",
                    "required": true,
                    "description": "Id user"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "title": "Sample",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number",
                      "description": "Id updated user"
                    },
                    "avatar": {
                      "type": "string",
                      "description": "Avatar updated user"
                    },
                    "email": {
                      "type": "string",
                      "description": "Email updated user"
                    },
                    "username": {
                      "type": "string",
                      "description": "Username updated user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "You are not authorized"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "return token by registration",
        "tags": [
          "News site Api"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Sample",
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email user"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password user"
                  },
                  "username": {
                    "type": "string",
                    "description": "Username user"
                  },
                  "value": {
                    "type": "string",
                    "description": "Value type form from frontend, not use in API"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration successful",
            "content": {
              "text/html": {
                "schema": {
                  "type":"string",
                  "example": "token"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "return token by login",
        "tags": [
          "News site Api"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Sample",
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email user"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password user"
                  },
                  "username": {
                    "type": "string",
                    "description": "Username user, not use in API for this route"
                  },
                  "value": {
                    "type": "string",
                    "description": "Value type form from frontend, not use in API for this route"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "text/html": {
                "schema": {
                  "type":"string",
                  "example": "token"
                }
              }
            }
          },
          "400": {
            "description": "Invalid password"
          }
        }
      }
    },
    "/auth/whoiam": {
      "get": {
        "summary": "get user by token",
        "tags": [
          "News site Api"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": {
              "type":"string",
              "example": "token"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get user successful",
            "content": {
              "application/json": {
                "schema": {
                  "title": "Sample",
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "description": "Email user"
                    },
                    "avatar": {
                      "type": "string",
                      "description": "Avatar user"
                    },
                    "username": {
                      "type": "string",
                      "description": "Username user"
                    },
                    "id": {
                      "type": "number",
                      "description": "id user in db"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "You are not authorized"
          }
        }
      }
    },
    "/auth/google": {
      "get": {
        "summary": "get a token after google login",
        "tags": [
          "News site Api"
        ],
        "responses": {
          "200": {
            "description": "Google login successful",
            "content": {
              "text/html": {
                "schema": {
                  "type":"string",
                  "example": "token"
                }
              }
            }
          }
        }
      }
    }
  }
}

